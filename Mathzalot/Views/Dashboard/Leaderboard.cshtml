</div>
<script>
    (function () {
        [...document.querySelectorAll(".control")].forEach(button => {
            button.addEventListener("click", function() {
                if (button.dataset.id !== 'Leaderboard')
                    window.location.href = button.dataset.id;
            })
        });
    })();
</script>
